---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import { MonthInput } from "./MonthInput";
import { TotalMoneyWanted } from "./TotalMoneyWanted";
import { Calculator } from "./Calculator";
import { OfferingPrice } from "./OfferingPrice";
import { Offering } from "./Offering";
import { TextCalculated } from "./TextCalculated";
---

<main
  class="grid lg:grid-cols-2 place-items-center py-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <Calculator client:load />
</main>
