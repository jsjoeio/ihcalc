---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { MonthInput } from "./MonthInput";
import {TotalMoneyWanted } from "./TotalMoneyWanted"
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center py-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-center mb-12">
      How much do you want to make? 
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl text-center">
      I want to make <strong>$<span aria-label="Total Money Wanted">
        <TotalMoneyWanted /></span></strong> in <strong><span aria-label="Number of Months">
      <MonthInput />   
      </span> months</strong><br/> by selling 
      a <strong>$50 course</strong>.
    </p>
    <button class="mt-6 mx-auto block px-12 py-4 rounded-lg font-bold bg-black text-white">
        Show me how
    </button>
  </div>
</main>
